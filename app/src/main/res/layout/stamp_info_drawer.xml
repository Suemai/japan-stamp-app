<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="16dp">

            <TextView
                    android:id="@+id/stampName_drawer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stamp name"
                    android:textSize="25sp"/>


            <TextView
                    android:id="@+id/difficulty_drawer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Difficulty"
            />

            <TextView
                    android:id="@+id/hours_drawer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Open hours"
            />

            <TextView
                    android:id="@+id/holiday_drawer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Holiday"
            />

            <TextView
                    android:id="@+id/fee_drawer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Entry fee"
            />

            <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            />


            <TextView
                    android:id="@+id/stampNo_drawer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stamp number"
            />

            <TextView
                    android:id="@+id/obtainable_drawer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Obtainable"
            />

            <TextView
                    android:id="@+id/location_drawer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stamp Location"
            />


        </LinearLayout>

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>