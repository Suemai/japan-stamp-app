<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="16dp">

            <TextView
                    android:id="@+id/stampName_drawer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stamp name"
                    android:textSize="25sp"
                    android:textAlignment="center"
            />

            <TextView
                    android:id="@+id/difficulty_drawer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Difficulty"
            />

            <TextView
                    android:id="@+id/hours_drawer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Open hours"
                    android:textAlignment="center"
            />

            <TextView
                    android:id="@+id/holiday_drawer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Holiday"
                    android:textAlignment="center"
            />

            <TextView
                    android:id="@+id/fee_drawer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Entry fee"
                    android:textAlignment="center"
            />
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

            <ImageButton
                    android:id="@+id/addStamp_btn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/add_foreground"/>

            <ImageButton
                    android:id="@+id/deleteStamp_btn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/delete_foreground"/>
        </LinearLayout>

            <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/stampset_divider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            />

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/stamp_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            />

        </LinearLayout>

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>