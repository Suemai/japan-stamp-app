<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="16dp">

            <TextView
                    android:id="@+id/stampName_drawer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stamp name"
                    android:textSize="25sp"
                    android:textAlignment="center"
            />

            <TextView
                    android:id="@+id/difficulty_drawer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Difficulty"
            />

            <TextView
                    android:id="@+id/hours_drawer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Open hours"
                    android:textAlignment="center"
            />

            <TextView
                    android:id="@+id/holiday_drawer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Holiday"
                    android:textAlignment="center"
            />

            <TextView
                    android:id="@+id/fee_drawer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Entry fee"
                    android:textAlignment="center"
            />

            <ImageView
                    android:id="@+id/stamp_image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>

            <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/stampset_divider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            />

            <ListView
                    android:id="@+id/stamp_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:showDividers="middle|end"
                    android:divider="@drawable/divider"
                    android:nestedScrollingEnabled="true"
            />

        </LinearLayout>

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>